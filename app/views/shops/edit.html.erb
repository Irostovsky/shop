<h1>Editing shop</h1>

<% form_for(@shop) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :opened %><br />
    <%= f.check_box :opened %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @shop %> |
<%= link_to 'Back', shops_path %>